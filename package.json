{
  "name": "@xilution/todd-coin-tasks",
  "version": "1.0.0",
  "description": "The Todd Coin Cryptocurrency Tasks",
  "scripts": {
    "build": "tsc",
    "docker-build": "docker build --build-arg NPM_TOKEN=$NPM_TOKEN -t xilution/todd-coin-tasks .",
    "docker-scan": "docker scan xilution/todd-coin-tasks",
    "docker-start": "docker-compose -f docker-compose.yml up -d",
    "docker-restart": "docker-compose -f docker-compose.yml restart",
    "docker-stop": "docker-compose -f docker-compose.yml down",
    "docker-logs-db": "docker-compose logs -f db",
    "docker-init": "docker run --rm -e OPERATION=INIT -e DB_HOST=host.docker.internal xilution/todd-coin-tasks",
    "docker-mine": "docker run --rm -e OPERATION=MINE -e DB_HOST=host.docker.internal xilution/todd-coin-tasks",
    "docker-sync": "docker run --rm -e OPERATION=SYNC -e DB_HOST=host.docker.internal xilution/todd-coin-tasks",
    "clean": "rm -rf ./coverage ./dist",
    "format": "prettier --write .",
    "init": "OPERATION=INIT ts-node ./src/index.ts",
    "mine": "OPERATION=MINE ts-node ./src/index.ts",
    "sync": "OPERATION=SYNC ts-node ./src/index.ts",
    "validate": "OPERATION=VALIDATE ts-node ./src/index.ts",
    "watch": "nodemon --watch src -e ts --exec \"npm run build && npm run start\"",
    "verify": "prettier --check . && eslint . --ext .js,.ts && npm run test && npm run build",
    "semantic-release": "semantic-release",
    "test": "jest ./test --passWithNoTests",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xilution/todd-coin-tasks"
  },
  "bugs": {
    "url": "https://github.com/xilution/todd-coin-tasks/issues"
  },
  "homepage": "https://github.com/xilution/todd-coin-tasks",
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@types/pg": "^8.6.5",
    "@xilution/todd-coin-brokers": "^5.5.0",
    "@xilution/todd-coin-constants": "^2.1.0",
    "@xilution/todd-coin-types": "^4.0.0",
    "@xilution/todd-coin-utils": "^7.3.0",
    "dayjs": "^1.11.1",
    "lodash": "^4.17.21",
    "pg": "^8.7.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@semantic-release-plus/docker": "^3.1.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/elliptic": "^6.4.14",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.23",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "chance": "^1.1.8",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "author": "Todd Brunia <tbrunia@gmail.com> (http://www.github.com/tbrunia)",
  "license": "MIT",
  "private": false
}
