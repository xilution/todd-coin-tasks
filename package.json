{
  "name": "@xilution/todd-coin-tasks",
  "version": "1.0.0",
  "description": "The Todd Coin Cryptocurrency Tasks",
  "scripts": {
    "build": "tsc",
    "docker-build": "docker build --build-arg NPM_TOKEN=$NPM_TOKEN -t xilution/todd-coin-tasks .",
    "docker-scan": "docker scan xilution/todd-coin-tasks",
    "docker-run-mine": "docker run -e OPERATION=MINE xilution/todd-coin-tasks",
    "docker-run-sync": "docker run -e OPERATION=SYNC xilution/todd-coin-tasks",
    "clean": "rm -rf ./coverage ./dist",
    "format": "prettier --write .",
    "open": "open http://localhost:3000",
    "start": "node ./dist/index.js",
    "watch": "nodemon --watch src -e ts --exec \"npm run build && npm run start\"",
    "verify": "prettier --check . && eslint . --ext .js,.ts && npm run test && npm run build",
    "semantic-release": "semantic-release",
    "test": "jest ./test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xilution/todd-coin-tasks"
  },
  "bugs": {
    "url": "https://github.com/xilution/todd-coin-tasks/issues"
  },
  "homepage": "https://github.com/xilution/todd-coin-tasks",
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@xilution/todd-coin-brokers": "^1.0.4",
    "@xilution/todd-coin-constants": "^1.1.0",
    "@xilution/todd-coin-types": "^1.1.0",
    "@xilution/todd-coin-utils": "^1.1.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@semantic-release-plus/docker": "^3.1.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "chance": "^1.1.8",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "typescript": "^4.6.3"
  },
  "author": "Todd Brunia <tbrunia@gmail.com> (http://www.github.com/tbrunia)",
  "license": "MIT",
  "private": false
}
